            "responses": {
              "200":{
                "description": "Success update team is  filtered by its id",
                "content": {
                  "application/json":{
                    "schema":{
                      "type":"object",
                      "properties": {
                        "statusCode":{
                          "type": "number"
                        },
                        "statusMessage":{
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              } 
            }
            
          }
        }
        ,
        "/players/{slug}":{
          "get":{
            "tags": [
              "Player API"
            ],
            "description": "GET players by team's slug",
