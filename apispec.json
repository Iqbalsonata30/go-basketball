            "responses": {
              "200":{
                "description": "Success delete team is  filtered by its id",
                "content": {
                  "application/json":{
                    "schema":{
                      "type":"object",
                      "properties": {
                        "statusCode":{
                          "type": "number"
                        },
                        "statusMessage":{
                          "type": "string"
